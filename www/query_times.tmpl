<div id="chart-element" style="height:100%;padding:50px;"></div>

    <script type="text/javascript">

       function drawChart() {
         //alert(JSON.stringify(json_str.data, null, 4));
	var json = JSON.parse(req.responseText);
         var obj = json.data;//JSON.parse(json);

         var container = document.getElementById('chart-element');
         var chart = new google.visualization.Timeline(container);
         var dataTable = new google.visualization.DataTable();
         dataTable.addColumn({
           type: 'string',
           id: 'Node'
         });
         dataTable.addColumn({
           type: 'string',
           id: 'Sleep %'
         });
         dataTable.addColumn({
           type: 'number',
           id: 'Start'
         });
         dataTable.addColumn({
           type: 'number',
           id: 'End'
         });
         var options = {
           colors: [],
         };
         for (var node in obj) {
           var quanta = 0;
           for (var i in obj[node]) {
             var time_data = obj[node]
             if (time_data[i] == -1) {
               quanta += 100;
               continue;
             }
             dataTable.addRow([node, time_data[i]+'%', quanta, quanta + 100]);
             quanta += 100;
             var white_intensity = Math.floor(254 * ((100-time_data[i])/100));
             options.colors.push('rgb(254,'+white_intensity+','+white_intensity+')');
             //alert(options.colors);
           }
         }
         chart.draw(dataTable, options);
       }

function refresh() {
  req = new XMLHttpRequest();
  req.onload = drawChart;
  req.open("GET", "/query_times?query_id={{query_id}}&json", true);
  req.send();
}
google.charts.setOnLoadCallback(refresh);
    </script>

